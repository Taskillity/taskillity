{% extends 'base.html.twig' %}

{% block title %} TASKILLITY {% endblock %}

{% block body %}

    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif;}
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="text left">
        <h1>Hola a todos !</h1>
    </div>

    <div>

        <h3>Google Calendar</h3>

        {% if authLink is not empty %}

            <div class="col-12 mb-5">
                <div class="col-12 text-center">
                    Por favor, <a href="{{ authLink }}" target="_blank" class"text-danger">ingrese aquí</a> para poder autorizar la visualizacion de eventos
                
                </div>

                <div class="col-12 text-center">

                    <form action="{{path('eventos')}}" method="post">
                        <label>Luego ingrese el código de verificaciones obtenido</label>
                        <div class="row">
                            <div class="col-sm-4 offset-sm-3">

                                <input type="text" required name="authcode"/>
                            </div>
                            <div class="col-sm-2">
                                <button type="submit" class"btn btn-danger">Validar</button>

                            </div>   

                        </div>
                    </form>
                </div>
            </div>
    {% endif %}
    {% if eventos|length > 0 %}
    
        <div class="row">
                <div class="col-sm-12">
                    {{ dump(eventos)}}
                </div>
        </div>
        {% endif %}
    </div>

{% endblock %}