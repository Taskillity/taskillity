{% extends 'base.html.twig' %}

{% block stylesheets %}
	<link href="{{ absolute_url(asset('styles/login.css')) }}" rel="stylesheet"/>
{% endblock %}
{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="container bg-primary w-75 mt-5 mb-5 rounded shadow">
		<div class="row align-items-stretch">
			<div class="col d-none d-lg-block col-md-5 col-lg-5 col-xl-6 rounded" id="centrador">
				<img id="imagen" src="{{ absolute_url(asset('images/Taskillity.png')) }}" alt="Taskillity Logo"/>
			</div>
			<div class="col bg-white p-5 rounded-end">
				<h2 class="fw-bold text-center py-5">Bienvenido a Taskillity!</h2>
				<form method="post">
					{% if error %}
						<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					{% endif %}

					{% if app.user %}
						<div class="mb-3">
							You are logged in as
							{{ app.user.username }},
							<a href="{{ path('app_logout') }}">Logout</a>
						</div>
					{% endif %}

					<div class="mb-4">
					<label for="inputEmail" class="form-label">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
					</div>
                    <div class="mb-4">
                    <label for="inputPassword" class="form-label">Password</label>
					<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    </div>
					<input
					type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

					{#
					        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
					        See https://symfony.com/doc/current/security/remember_me.html
					
					        <div class="checkbox mb-3">
					            <label>
					                <input type="checkbox" name="_remember_me"> Remember me
					            </label>
					        </div>
					    #}

					<button class="btn btn-lg btn-primary" type="submit">
						Iniciar sesión
					</button>
                    <div class="col-12 my-3">
                        <span>¿No tienes cuenta? <a href="#">Regístrate</a></span>
                        <span><a href="#">Recuperar contraseña</a></span>
                    </div>
				</form>
			{% endblock %}
