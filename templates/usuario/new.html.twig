{% extends 'base.html.twig' %}
{% block stylesheets %}
	<link href="{{ absolute_url(asset('styles/custom.css')) }}" rel="stylesheet"/>
{% endblock %}
{% block title %}Regístrate!
{% endblock %}

{% block body %}
	<div class="container bg-primary w-75 mt-5 mb-5 rounded shadow">
		<div class="row align-items-stretch">
			<div class="col d-none d-lg-block col-md-5 col-lg-5 col-xl-6 rounded" id="centrador">
				<img id="imagen" src="{{ absolute_url(asset('images/Taskillity.png')) }}" alt="Taskillity Logo"/>
			</div>
			<div class="col bg-white p-5 rounded-end">
				<h2 class="fw-bold text-center py-5">Registro en Taskillity</h2>

				<!--LOGIN-->
				<form method="POST" role="form" id="register-form" class="ms-3" action="#">
					{{ include('usuario/_form.html.twig') }}
                <div class="col-12 my-3 text-center">
                
					<span>¿Ya estás registrado?
						<a href="{{ path('app_login') }}">Inicia sesión</a>
					</span>
				</div>
			</form>

				
			{% endblock %}
